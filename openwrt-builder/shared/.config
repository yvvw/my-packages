# custom: enable if memory < 2G
CONFIG_PACKAGE_zram-swap=n
# custom: enable if have fan
CONFIG_PACKAGE_luci-app-fan=n

# skip for compile wiphy struct type incompatible
CONFIG_PACKAGE_kmod-rtl8188eu=n
CONFIG_PACKAGE_kmod-rtl8189es=n

# feeds
CONFIG_FEED_video=n
CONFIG_FEED_telephony=n

# image options
CONFIG_TARGET_ROOTFS_PARTSIZE=1024
CONFIG_TARGET_ROOTFS_TARGZ=y
CONFIG_TARGET_ROOTFS_EXT4FS=n

# package options
CONFIG_USE_APK=n
CONFIG_PACKAGE_opkg=y
CONFIG_SIGNED_PACKAGES=n
CONFIG_SIGNATURE_CHECK=n

# base
CONFIG_PACKAGE_bash=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_dbus-utils=y
CONFIG_PACKAGE_iptables-nft=y
CONFIG_PACKAGE_openssh-sftp-server=y

# nginx
CONFIG_PACKAGE_luci=n
CONFIG_PACKAGE_luci-nginx=y

# luci
CONFIG_LUCI_CSSTIDY=n
CONFIG_PACKAGE_luci-theme-argon=y
CONFIG_PACKAGE_luci-app-wizard=y
CONFIG_PACKAGE_luci-app-syscontrol=y
CONFIG_PACKAGE_luci-app-advancedplus=y
CONFIG_PACKAGE_luci-app-upnp=y

# turboacc
CONFIG_PACKAGE_luci-app-turboacc=y
CONFIG_PACKAGE_kmod-nft-fullcone=y
CONFIG_PACKAGE_kmod-shortcut-fe-cm=y

# busybox
CONFIG_BUSYBOX_CUSTOM=y
CONFIG_BUSYBOX_CONFIG_FEATURE_SYSLOG_INFO=y
CONFIG_BUSYBOX_CONFIG_FEATURE_CROND_SPECIAL_TIMES=y
CONFIG_BUSYBOX_CONFIG_FEATURE_XARGS_SUPPORT_REPL_STR=y

# compile options
CONFIG_IMAGEOPT=y
CONFIG_ALL_NONSHARED=y
CONFIG_BUILD_PATENTED=y
CONFIG_KERNEL_DEBUG_FS=n
CONFIG_KERNEL_DEBUG_INFO=n
CONFIG_KERNEL_XDP_SOCKETS=y
CONFIG_ZLIB_OPTIMIZE_SPEED=y
